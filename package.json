{
	"name": "glitch-text-generator",
	"private": true,
	"version": "0.0.3",
	"type": "module",
	"homepage": "https://cooltext.app/",
	"scripts": {
		"dev": "vite dev --host",
		"build": "autocorrect --fix ./ && vite build",
		"preview": "bunx wrangler dev",
		"deploy": "bun run build && wrangler deploy",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "bun autocorrect --fix ./ && prettier --check . && eslint .",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run",
		"postbuild": "bunx svelte-sitemap --domain https://cooltext.app --out-dir .svelte-kit/cloudflare"
	},
	"devDependencies": {
		"@eslint/compat": "^1.4.1",
		"@eslint/js": "^9.39.1",
		"@inlang/paraglide-js": "^2.5.0",
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/adapter-cloudflare": "^7.2.4",
		"@sveltejs/kit": "^2.48.5",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/forms": "^0.5.10",
		"@tailwindcss/typography": "^0.5.19",
		"@tailwindcss/vite": "^4.1.17",
		"@types/js-yaml": "^4.0.9",
		"@types/node": "^24.10.1",
		"autocorrect-node": "^2.14.0",
		"confusables": "^1.1.1",
		"daisyui": "^5.5.5",
		"eslint": "^9.39.1",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.13.0",
		"globals": "^16.5.0",
		"gray-matter": "^4.0.3",
		"js-yaml": "^4.1.1",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.7.1",
		"svelte": "^5.43.13",
		"svelte-check": "^4.3.4",
		"svelte-exmarkdown": "^5.0.2",
		"svelte-sitemap": "^2.7.1",
		"tailwindcss": "^4.1.17",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.47.0",
		"unicode-text-decorator": "^0.1.1",
		"vite": "^7.2.4",
		"vitest": "^4.0.12",
		"wrangler": "^4.50.0",
		"zero-width-lib": "^1.1.0"
	},
	"dependencies": {}
}
